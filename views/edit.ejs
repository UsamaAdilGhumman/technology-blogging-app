<!doctype html>
<!--[if IE 8 ]><html class="ie ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><html lang="en" class="no-js"> <![endif]-->
<html lang="en">

    <head>
        <%- include('./partials/head'); %>
    </head>

    <body>
    
        <header class="clearfix">
            <%- include('./partials/header'); %>
        </header>
        
        
        <!-- Start Header Section -->
        <div class="page-header">
            <div class="overlay">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <h1>Edit Blog</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Header Section -->
         
        <div class="container contact-form" style="margin-top: 100px; margin-bottom: 97px">
            <form method="post" action="/edit/<%= result.id %> ">
                <h3 style="margin-bottom:5px ;">Blog Create</h3>
               <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea name="description" class="form-control" placeholder="Blog Body *" style="width: 100%; height: 150px;" required><%= result.description %></textarea>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="submit" class="btnContact" value="Publish Blog" />
                        </div>
                    </div>
                </div>
            </form>
    </div>

        
        <!--footer-->
        <footer>
            <%- include('./partials/footer'); %>
        </footer>

    </body>
</html>